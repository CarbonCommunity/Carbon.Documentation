{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "[markdown]": {
        "editor.fontSize": 14,
        "editor.lineHeight": 26,
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 128,
        "editor.lineNumbers": "off",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.minimap.enabled": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "frontMatter.panel.openOnSupportedFile": false,
    "vue.server.includeLanguages": [
        "vue",
        "markdown"
    ],
    "[json,jsonc,css,html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue,js,ts,mts]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
    }
}
