{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "hide-files.files": [],
    "[markdown]": {
        "editor.fontSize": 14,
        "editor.lineHeight": 26,
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 128,
        "editor.lineNumbers": "off",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.minimap.enabled": false
    },
    "frontMatter.content.pageFolders": [
        {
            "title": "docs",
            "path": "[[workspace]]/docs"
        },
        {
            "title": "hooks",
            "path": "[[workspace]]/docs/hooks"
        },
        {
            "title": "development",
            "path": "[[workspace]]/docs/development"
        },
        {
            "title": "archive",
            "path": "[[workspace]]/docs/archive"
        }
    ]
}